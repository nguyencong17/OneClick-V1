{% comment %} Blog categories {% endcomment %}

{%- liquid 
  assign categories = section.settings.category | split: ',' 
  assign title = block.settings.heading
  assign show = block.settings.show_block
-%}

{%- if show -%}
<div class="blog-categories">
  {% if categories %}
    <div class="mod-header">
      <h3 class="mod-title">{{ title }}</h3>
      {% if show_collapse %}
      <button id="toggle-category" title="Toggle slide-up and slide-down states for the target" class="btn-arrow btn-slide-down" name="button-category">{% render 'icon-chevron-up' %}</button>
      {% endif %}
    </div>
    <ul id="target">
    {% for link in linklists.main-menu.links -%}
      {% assign title_link = link.title | downcase %}
      {% if title_link == "blogs" %}
        {% for categories in link.links %}
          <li class="category-item">
          {{ categories.url | link_to: categories.url }}
          </li>
        {% endfor %}
      {% endif %}
    {%- endfor %}
    </ul>
  {% endif %}
</div>
{%- endif -%}